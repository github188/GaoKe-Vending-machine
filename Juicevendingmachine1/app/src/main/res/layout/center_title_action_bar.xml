<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:id="@+id/actionbarLayoutId"
    android:background="@drawable/title">
    <ImageButton
        android:id="@+id/menuBtnBack"
        android:layout_marginLeft="12dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/back"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"/>
    <TextView
        android:id="@+id/menuTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/registTitle"
        android:textSize="24sp"
        android:clickable="true"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/menuFirstTV"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/help"
        android:contentDescription="@string/app_name"
        android:textSize="30sp"/>
    <!--TextView TalkBack可以直接读出里面的内容-->
    <TextView
        android:id="@+id/tvMenuBtnBackClick"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/menuSecondTV"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/app_name"
        android:textSize="30sp"
        android:background="@drawable/vip"
        android:layout_alignBaseline="@+id/menuFirstTV"
        android:layout_alignBottom="@+id/menuFirstTV"
        android:layout_toLeftOf="@+id/menuFirstTV"
        android:layout_toStartOf="@+id/menuFirstTV"
        android:layout_marginEnd="14dp"/>
</RelativeLayout>